{% extends 'layouts/main.twig' %}

{% block style %}
  <link rel="stylesheet" href="{{ '/css/user.css?t=' }}{{ time }}">
{% endblock %}

{% block title %}Создание личного кабинета{% endblock %}

{% block content %}
  <div class="login">
    <h2 class="login__title">Создание личного кабинета</h2>

    <form class="login__form" method="post">
      <div class="login__input-box">
        <label class="login__label" for="firstname">Имя:</label>
        <input class="login__edit" type="text" name="firstname" id="firstname" value="{{ user.firstname }}"
               placeholder="Введите Ваше имя" required>
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </div>

      <div class="login__input-box">
        <label class="login__label" for="lastname">Фамилия:</label>
        <input class="login__edit" type="text" name="lastname" id="lastname" value="{{ user.lastname }}"
               placeholder="Введите Вашу фамилию">
      </div>

      <div class="login__input-box">
        <label class="login__label" for="email">Email:</label>
        <input class="login__edit" type="email" name="email" id="email" value="{{ user.email }}"
               placeholder="Введите email" required>
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </div>

      <div class="login__input-box">
        <label class="login__label" for="password">Пароль:</label>
        <input class="login__edit" type="password" name="password" id="password" value="{{ user.password }}"
               placeholder="Введите пароль">
      </div>

      <div class="login__input-box">
        <label class="login__label" for="password-check"></label>
        <input class="login__edit" type="password" name="password-check" id="password-check"
               placeholder="Повторите введенный пароль">
      </div>

      <div class="login__control">
        <button class="button login__button" type="submit">Создать</button>
      </div>
    </form>

    {% if message %}
      <p class="login__message">{{ message }}</p>
    {% endif %}
  </div>
{% endblock %}
